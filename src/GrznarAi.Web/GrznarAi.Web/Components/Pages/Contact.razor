@page "/contact"
@using GrznarAi.Web.Models
@using GrznarAi.Web.Services
@using System.ComponentModel.DataAnnotations
@inject IEmailService EmailService
@inject ILogger<Contact> Logger
@rendermode InteractiveServer

<PageTitle>Kontakt - GrznarAI</PageTitle>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h4 class="mb-2">Kontaktujte nás</h4>
            
            <div class="row mb-2">
                <div class="col-md-4 mb-2 mb-md-0">
                    <div class="card shadow-sm">
                        <div class="card-body p-2 text-center">
                            <i class="bi bi-envelope-fill text-primary" style="font-size: 1.5rem;"></i>
                            <h6 class="my-1">Email</h6>
                            <p class="text-muted small mb-1">michal@grznar.eu</p>
                            <a href="mailto:michal@grznar.eu" class="btn btn-sm btn-outline-primary py-0">Odeslat email</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-2 mb-md-0">
                    <div class="card shadow-sm">
                        <div class="card-body p-2 text-center">
                            <i class="bi bi-github text-primary" style="font-size: 1.5rem;"></i>
                            <h6 class="my-1">GitHub</h6>
                            <p class="text-muted small mb-1">github.com/Michal1609</p>
                            <a href="https://github.com/Michal1609" target="_blank" class="btn btn-sm btn-outline-primary py-0">Zobrazit profil</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body p-2 text-center">
                            <i class="bi bi-linkedin text-primary" style="font-size: 1.5rem;"></i>
                            <h6 class="my-1">LinkedIn</h6>
                            <p class="text-muted small mb-1">linkedin.com/in/example</p>
                            <a href="https://linkedin.com/in/example" target="_blank" class="btn btn-sm btn-outline-primary py-0">Spojit se</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="contact-form-card" class="card shadow">
                <div class="card-header py-2">
                    <h5 class="mb-0">Pošlete nám zprávu</h5>
                </div>
                
                <div class="card-body p-3">
                    <EditForm Model="@model" OnValidSubmit="SendMessage" FormName="contactForm">
                        <DataAnnotationsValidator />
                        
                        @if (isSuccess)
                        {
                            <div class="alert alert-success py-1 mb-2 small">
                                <i class="bi bi-check-circle-fill me-1"></i> Vaše zpráva byla úspěšně odeslána. Děkujeme!
                            </div>
                        }

                        @if (isError)
                        {
                            <div class="alert alert-danger py-1 mb-2 small">
                                <i class="bi bi-exclamation-triangle-fill me-1"></i> Při odesílání zprávy došlo k chybě.
                            </div>
                        }

                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label for="name" class="form-label small mb-0">Vaše jméno</label>
                                    <InputText class="form-control form-control-sm" id="name" placeholder="Zadejte své jméno" @bind-Value="model.Name" />
                                    <ValidationMessage For="@(() => model.Name)" class="text-danger small" />
                                </div>
                                
                                <div class="mb-2">
                                    <label for="email" class="form-label small mb-0">E-mailová adresa</label>
                                    <InputText type="email" class="form-control form-control-sm" id="email" placeholder="Zadejte svůj e-mail" @bind-Value="model.Email" />
                                    <ValidationMessage For="@(() => model.Email)" class="text-danger small" />
                                </div>
                                
                                <div class="mb-2">
                                    <label for="subject" class="form-label small mb-0">Předmět</label>
                                    <InputText class="form-control form-control-sm" id="subject" placeholder="Zadejte předmět" @bind-Value="model.Subject" />
                                    <ValidationMessage For="@(() => model.Subject)" class="text-danger small" />
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label for="message" class="form-label small mb-0">Zpráva</label>
                                    <InputTextArea class="form-control form-control-sm" style="height: 105px;" id="message" placeholder="Zadejte vaši zprávu" @bind-Value="model.Message" />
                                    <ValidationMessage For="@(() => model.Message)" class="text-danger small" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary btn-sm" disabled="@isSending">
                                @if (isSending)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <span>Odesílání...</span>
                                }
                                else
                                {
                                    <i class="bi bi-send me-1"></i> <span>Odeslat zprávu</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #contact-form-card {
        height: auto;
        max-height: 474px;
        overflow: hidden;
    }
    
    #contact-form-card .card-body {
        padding-bottom: 15px;
    }
</style>

@code {
    private ContactModel model = new ContactModel();
    private bool isSending = false;
    private bool isSuccess = false;
    private bool isError = false;
    
    private async Task SendMessage()
    {
        isSending = true;
        isSuccess = false;
        isError = false;

        try
        {
            // Poslat potvrzovací email odesílateli
            await EmailService.SendContactConfirmationEmailAsync(model.Email, model.Name);
            
            // Poslat notifikační email administrátorovi
            await EmailService.SendContactNotificationEmailAsync(model.Name, model.Email, model.Subject, model.Message);
            
            // Reset formuláře po úspěšném odeslání
            model = new ContactModel();
            isSuccess = true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Chyba při odesílání kontaktního formuláře");
            isError = true;
        }
        finally
        {
            isSending = false;
        }
    }
}
