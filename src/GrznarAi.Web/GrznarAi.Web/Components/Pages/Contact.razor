@page "/contact"

<PageTitle>Contact - GrznarAI</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="mb-4">Contact Me</h1>
            
            <div class="row mb-5">
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-envelope-fill text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Email</h4>
                            <p class="text-muted">contact@example.com</p>
                            <a href="mailto:contact@example.com" class="btn btn-outline-primary">Send Email</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-github text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">GitHub</h4>
                            <p class="text-muted">github.com/Michal1609</p>
                            <a href="https://github.com/Michal1609" target="_blank" class="btn btn-outline-primary">View Profile</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-linkedin text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">LinkedIn</h4>
                            <p class="text-muted">linkedin.com/in/example</p>
                            <a href="https://linkedin.com/in/example" target="_blank" class="btn btn-outline-primary">Connect</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Send Me a Message</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name" @bind="name">
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email" @bind="email">
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="Enter subject" @bind="subject">
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Enter your message" @bind="message"></textarea>
                        </div>
                        
                        <button type="button" class="btn btn-primary" @onclick="SendMessage">
                            <i class="bi bi-send me-2"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string name = "";
    private string email = "";
    private string subject = "";
    private string message = "";
    
    private void SendMessage()
    {
        // In a real application, this would send the message
        // For now, we'll just reset the form
        name = "";
        email = "";
        subject = "";
        message = "";
    }
}
