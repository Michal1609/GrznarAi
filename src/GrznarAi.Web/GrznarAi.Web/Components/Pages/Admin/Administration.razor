@page "/admin/administration"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using GrznarAi.Web.Services

@inject ILocalizationService Localizer
@inject NavigationManager NavigationManager

<PageTitle>@Localizer.GetString("Administration.Title")</PageTitle>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Localizer.GetString("Administration.Title")</h2>
            <p class="mb-0">@Localizer.GetString("Administration.Description")</p>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Dashboard Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Přehled systémových statistik a stavu služeb v reálném čase.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/dashboard")'>
                                    <i class="bi bi-arrow-right me-2"></i>Dashboard
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                 <!-- Blog Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i>@Localizer.GetString("Administration.Blogs.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.Blogs.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/blogs")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("Administration.Blogs.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Comments Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Správa komentářů</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Správa komentářů u blogů, schvalování a odstraňování nevhodného obsahu.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/comments")'>
                                    <i class="bi bi-arrow-right me-2"></i>Správa komentářů
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Management Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i>@Localizer.GetString("Administration.Users.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.Users.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/administration/users")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("Administration.Users.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Role Management Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-shield-lock-fill me-2"></i>@Localizer.GetString("Administration.Roles.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.Roles.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/administration/roles")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("Administration.Roles.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- API Keys Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-key-fill me-2"></i>API Klíče</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Správa API klíčů pro přístup k API rozhraní aplikace.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/apikeys")'>
                                    <i class="bi bi-arrow-right me-2"></i>API Klíče
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Image Manager Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-images me-2"></i>@Localizer.GetString("ImageManager.Title", "Image Manager")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("ImageManager.Card.Description", "Upload, manage and delete images used across the website.")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/images")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("ImageManager.Title", "Image Manager")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Placeholder for future modules -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-sliders me-2"></i>Globální nastavení</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Správa globálních proměnných a nastavení aplikace.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/global-settings")'>
                                    <i class="bi bi-arrow-right me-2"></i>Globální nastavení
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cache Administration Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-database me-2"></i>@Localizer.GetString("CacheAdmin.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("CacheAdmin.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/cache")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("CacheAdmin.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Localization Card (existing functionality) -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-translate me-2"></i>Localization</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Manage website text translations and language settings.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/localization")'>
                                    <i class="bi bi-arrow-right me-2"></i>Localization
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Templates Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-envelope me-2"></i>@Localizer.GetString("EmailTemplates.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.EmailTemplates.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/email-templates")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("EmailTemplates.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Projects Admin Card (existing functionality) -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-kanban me-2"></i>Projects</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>Manage projects, documentation, and showcases.</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/projects")'>
                                    <i class="bi bi-arrow-right me-2"></i>Projects
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- AI News Card (new) -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-robot me-2"></i>@Localizer.GetString("Administration.AiNews.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.AiNews.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/ainews")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("Administration.AiNews.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weather History Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><i class="bi bi-cloud-rain me-2"></i>@Localizer.GetString("Administration.WeatherHistory.Title")</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p>@Localizer.GetString("Administration.WeatherHistory.Description")</p>
                            <div class="mt-auto">
                                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/admin/weather-history")'>
                                    <i class="bi bi-arrow-right me-2"></i>@Localizer.GetString("Administration.WeatherHistory.Title")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

